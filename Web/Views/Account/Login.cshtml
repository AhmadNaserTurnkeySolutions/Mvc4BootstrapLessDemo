@model Mvc4BootstrapLessDemo.Models.LoginModel

@{
  ViewBag.Title = "Log in";
}

@section header
{
  <header class="jumbotron subhead" id="overview">
    <div class="container">
      <h1>@ViewBag.Title</h1>
      <p class="lead">Example of login form.</p>
    </div>
  </header>
}

<div class="clearfix">&nbsp;</div>

<div class="row">
  <div class="span6">
    <section id="loginForm" class="box">
      <div class="inner">
        @using (Html.BeginForm(MVC.Account.ActionNames.Login, MVC.Account.Name, new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-inline" }))
        {
          @Html.AntiForgeryToken()
          @Html.ValidationSummary(true)

          <h4>Log in with this site's credentials.</h4>
      
          <div class="control-group">
            <div class="controls">
              @Html.TextBoxFor(m => m.UserName, new { placeholder = @Html.DisplayNameFor(m => m.UserName) })
            </div>
          </div>
        
          <div class="control-group">
            <div class="controls">
              @Html.PasswordFor(m => m.Password, new { @class = "input-medium", placeholder = @Html.DisplayNameFor(m => m.Password) })
              <input class="btn btn-primary" type="submit" value="Log in" />
            </div>
          </div>
        
          <div class="register-link">
            @Html.ActionLink("Register", "Register") if you don't have an account.
          </div>
        }
      </div>
    </section>

  </div>

  <div class="span6">
    <section class="social box" id="socialLoginForm">
      <div class="inner">
        <h4>Do you already have an account on one of these sites? Click the logo to log in with it here:</h4>
        @Html.Action("ExternalLoginsList", new { ReturnUrl = ViewBag.ReturnUrl })
      </div>
    </section>
  </div>
</div>

@section Scripts {
  @Scripts.Render("~/bundles/jqueryval")
}
